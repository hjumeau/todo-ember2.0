{{todo-header createTodo=(action 'createTodo')}}
<section class="main">
    <ul class="todo-list">
        {{#each filteredTodos as |todo|}}
            <li class="editing">
                {{todo-item todo=todo updateTodo=(action 'updateTodo') removeTodo=(action 'removeTodo')}}
            </li>
        {{/each}}
    </ul>
</section>
{{#if todos}}
    {{todo-footer clearCompleted=(action 'clearCompleted') todoCount=remainingTodoCount}}
{{/if}}
